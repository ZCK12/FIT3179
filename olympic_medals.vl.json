{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Olympic Medals per 1,000,000 Population by Country 2020",
  "width": 800,
  "height": 600,
  "layer": [
    {
      "projection": {"type": "equirectangular"},
      "data": {
        "url": "https://zck12.github.io/FIT3179/map.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {"url": "https://zck12.github.io/FIT3179/finaldata.csv"},
            "key": "Country",
            "fields": ["Total_Medals", "Population"]
          }
        },
        {
          "calculate": "datum.Total_Medals/datum.Population * 1000000",
          "as": "Medals per Million"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 0.2},
      "encoding": {
        "color": {
          "field": "Medals per Million",
          "type": "quantitative",
          "scale": {
            "type": "symlog",
            "domain": [0, 75],
            "range": ["#CFF6BD", "#348B0E"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Medals per Million", "type": "quantitative"}
        ]
      }
    },
    {
      "projection": {"type": "equirectangular"},
      "data": {"graticule": {"step": [15, 15]}},
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.1}
    }
  ],
  "config": {}
}
