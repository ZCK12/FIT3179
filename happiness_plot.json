{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Happiness and Freedom by Country",
  "width": 800,
  "height": 600,
  "data": {"url": "https://zck12.github.io/FIT3179/Happiness_Data_2015.csv"},
  "encoding": {
    "x": {
      "field": "Economy (GDP per Capita)",
      "type": "quantitative",
      "scale": {"type": "symlog", "domain": [0, 1.8]}
    },
    "y": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"type": "linear", "domain": [2, 8]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "size": {"field": "Freedom", "type": "quantitative"},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Happiness Score", "type": "quantitative"},
          {"field": "Economy (GDP per Capita)", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Australia' || datum['Country'] == 'Spain' || datum['Country'] == 'Germany' || datum['Country'] == 'Russia' || datum['Country'] == 'China'|| datum['Country'] == 'India'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}